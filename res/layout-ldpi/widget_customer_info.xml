<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_common_title"
        android:background="@color/color_bg_common"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="2.5dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dip"
            android:layout_marginTop="7dip"
            android:background="@color/color_system" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="客户基本信息"
            android:textColor="@color/color_system"
            android:textSize="@dimen/textsize_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dip"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="3dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_common_title"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:padding="8dip"
                android:src="@drawable/icon_person" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="客户名称"
                android:textColor="@color/color_text_title"
                android:textSize="@dimen/textsize_title" />
        </LinearLayout>
        
         <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_common_item"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextView_Layout_Detail_Title"
                    android:layout_weight="3"
                    android:text="序号" />

                <TextView style="@style/TextView_Layout_Detail_Split" />

                <TextView
                    style="@style/TextView_Layout_Detail_Title"
                    android:layout_weight="7"
                    android:text="用户名称" />

                <TextView style="@style/TextView_Layout_Detail_Split" />

                <TextView
                    style="@style/TextView_Layout_Detail_Title"
                    android:layout_weight="5"
                    android:text="用户状态" />
            </LinearLayout>
    </LinearLayout>

</LinearLayout>