<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_detail"
    android:orientation="vertical"
    android:paddingBottom="5dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_common_title"
        android:gravity="center_vertical"
        android:background="@drawable/bg_detail_top"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="2.5dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="7dip"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/tv_title_user_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="用户列表"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_common_item"
        android:gravity="center"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:paddingLeft="5dip"
        android:paddingRight="5dip" >

        <TextView
            style="@style/TextView_Layout_Detail_Title"
            android:layout_weight="4"
            android:text="套餐" />

        <TextView style="@style/TextView_Layout_Detail_Split" />

        <TextView
            style="@style/TextView_Layout_Detail_Title"
            android:layout_weight="3"
            android:text="机顶盒号" />

        <TextView style="@style/TextView_Layout_Detail_Split" />

        <TextView
            style="@style/TextView_Layout_Detail_Title"
            android:layout_weight="2"
            android:text="类型" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_customer_list_contaimer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="5dip"
        android:paddingRight="5dip" >
    </LinearLayout>

</LinearLayout>