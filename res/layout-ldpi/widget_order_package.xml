<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_layout_press_down"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/border_white_radius5"
        android:clickable="true" >

        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:background="@drawable/bg_blue_radius_top_2"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="套餐订购"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_title"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="5dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="4"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_common_item"
                    android:gravity="center_vertical"
                    android:text="订购套餐"
                    android:textColor="@color/color_system"
                    android:textSize="@dimen/textsize_title" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_common_title" >

                    <Spinner
                        android:id="@+id/sp_package"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_white_radius5"
                        android:gravity="center"
                        android:paddingLeft="10dip"
                        android:textAlignment="center"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="3dip"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/icon_arrow_down" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="4"
                android:visibility="gone"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_common_item"
                    android:gravity="center_vertical"
                    android:text="生效时间"
                    android:textColor="@color/color_system"
                    android:textSize="@dimen/textsize_layout_detail_title" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_common_title" >

                    <TextView
                        android:id="@+id/tv_valid_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_white_radius5"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dip"
                        android:text=""
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="3dip"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/icon_arrow_down" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="4"
                android:visibility="gone"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_common_item"
                    android:gravity="center_vertical"
                    android:text="失效时间"
                    android:textColor="@color/color_system"
                    android:textSize="@dimen/textsize_layout_detail_title" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_common_title" >

                    <TextView
                        android:id="@+id/tv_expire_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_white_radius5"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dip"
                        android:text=""
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="3dip"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/icon_arrow_down" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_order_package"
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:background="@drawable/bg_btn_system"
                    android:gravity="center"
                    android:text="确认办理"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textsize_common_btn_big" >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>